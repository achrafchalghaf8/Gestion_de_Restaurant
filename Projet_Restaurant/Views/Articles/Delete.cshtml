@model Projet_Restaurant.DTO.ArticleDTO

@{
    ViewData["Title"] = "Delete Article";
}

<h1>Supprimer l'article</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet article ?</h3>
<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <!-- Formulaire de confirmation de suppression -->
    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.ArticleID">
        <input type="hidden" asp-for="ArticleID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Annuler</a>
    </form>

</div>
