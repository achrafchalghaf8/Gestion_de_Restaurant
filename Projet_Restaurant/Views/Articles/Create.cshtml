@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Projet_Restaurant.DTO.ArticleDTO

<div class="container mt-5">
    <h1 class="text-center mb-4">Créer un Nouvel Article</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Formulaire de Création</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <!-- Nom de l'article -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nom de l'article</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Prix -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Prix</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- URL de l'image -->
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">URL de l'image</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <!-- Catégorie -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Catégorie</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">Sélectionnez une catégorie</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- Boutons -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        Retour à la liste
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Créer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
